<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/cpu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:text="Cpu 1"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/cpu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cpu1"
        android:layout_alignStart="@+id/cpu1"
        android:layout_below="@+id/cpu1"
        android:layout_marginTop="16dp"
        android:text="Cpu 2"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/cpu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cpu2"
        android:layout_alignStart="@+id/cpu2"
        android:layout_below="@+id/cpu2"
        android:layout_marginTop="16dp"
        android:text="Cpu 3"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/mpdecision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cpu2"
        android:layout_alignStart="@+id/cpu2"
        android:layout_below="@+id/cpu2"
        android:layout_marginTop="16dp"
        android:text="MDP Decision"/>

</RelativeLayout>